<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}{% endblock %} | Ensaimada</title>
    {% block stylesheets %}{% endblock %}
    {% block rss %}{% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.png') }}" />
    
</head>

<body id="{% block id '' %}"><div id="contenedor">
    {% block body %}{% endblock %}
    
    <footer>
        &copy; {{ 'now'|date('Y') }} - Ensaimada
        <a href="{{ path('backend_portada', { 'pagina': 'ayuda' }) }}">{{ "Ayuda" | trans }}</a>
        <a href="{{ path('backend_portada') }}">{{ "Contacto" | trans }}</a>
        <a href="{{ path('backend_portada', { 'pagina': 'privacidad' }) }}">{{ "Privacidad" | trans }}</a>
        <a href="{{ path('backend_portada', { 'pagina': 'sobre-nosotros' }) }}">{{ "Sobre nosotros" | trans }}</a>
        
        {% set locale = app.request.session.locale %}
        <section id="idioma">
        {% if locale == 'es' %}
            <span>Español</span> - <a href="{{ path('backend_portada', { '_locale': 'en' }) }}">English</a>
        {% elseif locale == 'en' %}
            <a href="{{ path('backend_portada', { '_locale': 'es' }) }}">Español</a> - <span>English</span>
        {% endif %}
        </section>
    </footer>

    {% block javascripts %}{% endblock %}
</div></body>

</html>
