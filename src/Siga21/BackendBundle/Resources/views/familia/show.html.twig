{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Familia' %}
{% block title %}Descripcion: {{ entity }}{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('familia') }}" class="boton">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('familia_edit', { 'id': entity.id }) }}" class="boton">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('familia_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
