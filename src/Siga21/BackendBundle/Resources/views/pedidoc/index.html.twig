{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Pedidoc' %}
{% block title %}Listado de PedidoC{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>


<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Fecha_entrega</th>
            <th>Importe</th>
            <th>Observaciones</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pedidoc_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.fechaentrega %}{{ entity.fechaentrega|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.importe }}</td>
            <td>{{ entity.observaciones }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pedidoc_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/visualizar.png') }}"></a>
                    </li>
                    <li>
                        <a href="{{ path('pedidoc_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/borrar.gif') }}"></a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pedidoc_new') }}" class="boton">
            Crear nuevo
        </a>
    </li>
</ul>
{% endblock %}
