{% extends "BackendBundle::backend.html.twig" %}

{% block id 'PedidosC' %}
{% block title %}Descripcion: {{ entity }}{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fecha_entrega</th>
            <td>{{ entity.fechaentrega|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Importe</th>
            <td>{{ entity.importe }}</td>
        </tr>
        <tr>
            <th>Observaciones</th>
            <td>{{ entity.observaciones }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('pedidoc') }}" class="boton">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('pedidoc_edit', { 'id': entity.id }) }}" class="boton">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('pedidoc_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
