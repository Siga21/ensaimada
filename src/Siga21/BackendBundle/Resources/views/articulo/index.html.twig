{% extends "BackendBundle::backend.html.twig" %}

{% block id 'articulo' %}
{% block title %}Listado de articulos{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Vigente</th>
            <th>Ean13</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a title ="Pulsar para visualizar el registro" href="{{ path('articulo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.precio }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.vigente }}</td>
            <td>{{ entity.ean13 }}</td>
            <td>{{ entity.imagen }}</td>
            <td>
                <ul>
                    <li>
                    <a title="Pulsar para borrar el registro" href="{{ path('articulo_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/borrar.gif') }}"></a>
                
                    </li>
                    <li>
                        <a title="Pulsar para editar el registro" href="{{ path('articulo_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/editar.gif') }}"></a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a title="Pulsar para crear un nuevo registro"class="boton" href="{{ path('articulo_new') }}">
            Crear nuevo
        </a>
    </li>
</ul>
{% endblock %}
