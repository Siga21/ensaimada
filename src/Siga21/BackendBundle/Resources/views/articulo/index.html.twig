<h1>articulo list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Vigente</th>
            <th>Ean13</th>
            <th>Imagen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('articulo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.precio }}</td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.vigente }}</td>
            <td>{{ entity.ean13 }}</td>
            <td>{{ entity.imagen }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('articulo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('articulo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('articulo_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
