{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Articulo' %}
{% block title %}Descripcion: {{ entity }}{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>{{ entity.precio }}</td>
        </tr>
        <tr>
            <th>Descripcion</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Vigente</th>
            <td>{{ entity.vigente }}</td>
        </tr>
        <tr>
            <th>Ean13</th>
            <td>{{ entity.ean13 }}</td>
        </tr>
        <tr>
            <th>Imagen</th>
            <td>{{ entity.imagen }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('articulo') }}" class="boton">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('articulo_edit', { 'id': entity.id }) }}" class="boton">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('articulo_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
