{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Cliente' %}
{% block title %}Listado de Clientes{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Password</th>
            <th>Salt</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Telefono2</th>
            <th>Correo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.password }}</td>
            <td>{{ entity.salt }}</td>
            <td>{{ entity.direccion }}</td>
            <td>{{ entity.telefono }}</td>
            <td>{{ entity.telefono2 }}</td>
            <td>{{ entity.correo }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('cliente_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/visualizar.png') }}"></a>
                    </li>
                    <li>
                        <a href="{{ path('cliente_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/backend/images/borrar.gif') }}"></a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('cliente_new') }}" class="boton">
            Crear nuevo
        </a>
    </li>
</ul>
{% endblock %}
