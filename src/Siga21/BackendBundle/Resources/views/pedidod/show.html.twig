{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Pedidod' %}
{% block title %}Descripcion: 'pedido'{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>


<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ entity.cantidad }}</td>
        </tr>
        <tr>
            <th>Importe</th>
            <td>{{ entity.importe }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('pedidod') }}" class="boton">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('pedidod_edit', { 'id': entity.id }) }}" class="boton">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('pedidod_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="boton">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
