{% extends "BackendBundle::backend.html.twig" %}

{% block id 'Pedidod' %}
{% block title %}Listado de Pedidod{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cantidad</th>
            <th>Importe</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pedidod_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.cantidad }}</td>
            <td>{{ entity.importe }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pedidod_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pedidod_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pedidod_new') }}" class="boton">
            Crear nuevo
        </a>
    </li>
</ul>
{% endblock %}
