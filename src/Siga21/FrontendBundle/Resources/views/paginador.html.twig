{% if paginador.currentPage > 1 %}
   <a href="{{ path(ruta, {'page': paginador.previousPage}) }}"><img src="{{ asset('bundles/frontend/images/anterior.gif') }}" class="flechas"></a>
{% else %}
   <img src="{{ asset('bundles/frontend/images/anterior.gif') }}" class="flechas">
{% endif %}
{% if paginador.currentPage < paginador.lastPage %}
   <a href="{{ path(ruta, {'page': paginador.nextPage}) }}"><img src="{{ asset('bundles/frontend/images/siguiente.gif') }}" class="flechas"></a>
{% else %}
    <img src="{{ asset('bundles/frontend/images/siguiente.gif') }}" class="flechas">
{% endif %}

